<article aria-label="Aperçu d’article">
    <header>
        <h2>
            <a href="{{ path('article_show', { slug: article.slug }) }}">
                {{ article.title }}
            </a>
        </h2>
    </header>

    {% if article.image %}
        <img
            src="{{ asset('uploads/articles/' ~ article.image) }}"
            alt="{{ article.title }}"
            loading="lazy"
            width="400"
            height="250"
        >
    {% endif %}

    {% if article.createdAt %}
        <p>
            <time datetime="{{ article.createdAt|date('c') }}">
                {{ article.createdAt|date('d/m/Y') }}
            </time>
        </p>
    {% endif %}
</article>
