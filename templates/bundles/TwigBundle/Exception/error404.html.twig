{% extends 'base.html.twig' %}

{% block title %}Page introuvable — SymfonyPress{% endblock %}

{% block body %}
<div class="error-page">
    <div class="error-card">
        <div class="error-code error-404">404</div>
        <div class="error-title">Page introuvable</div>
